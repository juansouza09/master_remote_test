<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/rounded_border">

    <TextView
        android:id="@+id/nomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Nome"
        android:textSize="16sp"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toEndOf="@id/memberPhoto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomeText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Juan Souza"
        android:textColor="#000000"
        android:textSize="16sp"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toStartOf="@id/nomeText"
        app:layout_constraintTop_toBottomOf="@id/nomeText" />

    <TextView
        android:id="@+id/idText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="ID"
        android:textSize="16sp"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toEndOf="@id/memberPhoto"
        app:layout_constraintTop_toBottomOf="@id/nomeText2" />

    <TextView
        android:id="@+id/idText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:text="900-019-555"
        android:textColor="#000000"
        android:textSize="16sp"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/idText"
        app:layout_constraintTop_toBottomOf="@id/idText" />

    <TextView
        android:id="@+id/cityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Cidade:"
        android:textSize="16sp"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toEndOf="@id/nomeText2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cityText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="SÃ£o Paulo"
        android:textColor="#000000"
        android:textSize="16sp"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toStartOf="@id/cityText"
        app:layout_constraintTop_toBottomOf="@id/cityText" />

    <ImageView
        android:id="@+id/memberPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>
